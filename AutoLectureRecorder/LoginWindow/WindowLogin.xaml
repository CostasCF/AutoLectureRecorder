<Window x:Class="AutoLectureRecorder.LoginWindow.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoLectureRecorder.LoginWindow"
        mc:Ignorable="d"
        Title="WindowLogin" Height="500" Width="800" WindowStartupLocation="CenterScreen" Icon="/LoginWindow/graduation_cap_100px.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Image 
            Source="/LoginWindow/LoginFormLeft.jpg" 
            Stretch="Fill"
            RenderOptions.BitmapScalingMode="Fant"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackPanel>
                
            </StackPanel>

            <TextBlock 
                Grid.Row="1"
                TextAlignment="Center"
                FontSize="13"
                Margin="0,0,0,5"
                Text="Copyright ® 2021 Webflexers Organization. All rights reserved"/>
        </Grid>
    </Grid>
</Window>
