{
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Debug" },
      {
        "Name": "File",
        "Args": {
          "Path": "logs/log.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": "7"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "Default": "Data Source=.\\AutoLectureRecorderDB.db;"
  },
  "DefaultGeneralSettings": {
    "LaunchAtStartup": "true",
    "OnCloseKeepAlive": "true",
    "ShowSplashScreen": "true"
  },
  "SupportedUniversityDomains": {
    "Unipi": "@unipi.gr"
  } 
}
