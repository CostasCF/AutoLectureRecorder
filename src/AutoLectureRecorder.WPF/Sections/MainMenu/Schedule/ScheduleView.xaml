                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <materialDesign:PackIcon x:Name="SaturdayDownArrowPackIcon" 
                                     Grid.Row="3" Grid.Column="5"
                                     xf:Animations.PrimaryBinding="{Binding SaturdayHasLectures}"
                                     xf:Animations.Primary="{xf:Animate BasedOn={StaticResource Bounce}, Event=None}"
                                     xf:Animations.IterationBehavior="Forever"
                                     Width="22"
                                     Height="22"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"
                                     Foreground="{DynamicResource PrimaryBrush}"
                                     Kind="ArrowBottomCircle"/>

            <Grid Grid.Column="5" Grid.Row="2" Grid.RowSpan="2"
                  Width="0.5"
                  HorizontalAlignment="Right"
                  Background="{DynamicResource SectionLineBrush}">
            </Grid>

            <!-- Sunday -->
            <TextBlock Grid.Column="6" Grid.Row="0"
                       Text="Sunday"
                       FontSize="18"
                       TextAlignment="Center"
                       Padding="0, 25"
                       Foreground="{DynamicResource PrimaryTextBrush}"/>

            <ScrollViewer x:Name="SundaysLecturesScrollViewer"  
                          Grid.Column="6" Grid.Row="2"
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Disabled"
                          VirtualizingStackPanel.IsVirtualizing="True"
                          VirtualizingStackPanel.VirtualizationMode="Standard"
                          Margin="6, 10, 6, 0"
                          ScrollChanged="LecturesScrollViewer_OnScrollChanged">
                <ItemsControl x:Name="SundaysLecturesItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:ScheduledLectureComponent 
                                x:Name="LectureComponent"
                                Height="105"
                                Margin="0, 0, 0, 15"
