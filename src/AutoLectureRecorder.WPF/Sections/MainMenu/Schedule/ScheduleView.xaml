                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:ScheduledLectureComponent 
                                x:Name="LectureComponent"
                                Height="105"
                                Margin="0, 0, 0, 15"
                                VerticalAlignment="Top"
                                Lecture="{Binding Path=., Mode=TwoWay}"
                                Click="ScheduledLectureComponent_OnClick"
                                CheckedChanged="LectureComponent_OnCheckedChanged"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <materialDesign:PackIcon x:Name="WednesdayDownArrowPackIcon"
                                     Grid.Row="3" Grid.Column="2"
                                     xf:Animations.PrimaryBinding="{Binding SaturdayHasLectures}"
                                     xf:Animations.Primary="{xf:Animate BasedOn={StaticResource Bounce}, Event=None}"
                                     xf:Animations.IterationBehavior="Forever"
                                     Width="22"
                                     Height="22"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"
                                     Foreground="{DynamicResource PrimaryBrush}"
                                     Kind="ArrowBottomCircle"/>

            <Grid Grid.Column="2" Grid.Row="2" Grid.RowSpan="2"
                  Width="0.5"
                  HorizontalAlignment="Right"
                  Background="{DynamicResource SectionLineBrush}">
            </Grid>

            <!-- Thursday -->
            <TextBlock Grid.Column="3" Grid.Row="0"
                       Text="Thursday"
                       FontSize="18"
                       TextAlignment="Center"
                       Padding="0, 25"
                       Foreground="{DynamicResource PrimaryTextBrush}"/>

            <ScrollViewer x:Name="ThursdaysLecturesScrollViewer"  
