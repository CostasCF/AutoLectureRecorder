<rxui:ReactiveUserControl 
            x:Class="AutoLectureRecorder.Sections.MainMenu.Library.RecordedLecturesView"
            x:TypeArguments="local:RecordedLecturesViewModel"
            xmlns:rxui="http://reactiveui.net"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:AutoLectureRecorder.Sections.MainMenu.Library"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            FontFamily="{materialDesign:MaterialDesignFont}"
            mc:Ignorable="d" 
            d:Background="White"
            d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1">

            <TextBlock Grid.Row="1"  
                       Text="Αρχιτεκτονική Υπολογιστών"
                       TextTrimming="CharacterEllipsis"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       TextElement.FontWeight="Medium"
                       FontSize="26" 
                       Margin="0, 0, 0, 10"/>

        <StackPanel Grid.Row="1">
            <Border Background="{DynamicResource PrimaryBackgroundBrush}"
                    CornerRadius="15"
                    Margin="25, 8"
                    Padding="15">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0"
                                      BlurRadius="16"
                                      Opacity="0.15"
                                      Direction="-75" />
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               TextElement.FontWeight="Medium"
                               Text="Thursday, 11 May 2023"
                               TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Center"
                               TextAlignment="Center"
                               FontSize="18"/>

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="Duration: 2 hours, 13 minutes, 26 seconds"
                               TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Center"
                               TextAlignment="Center"
                               FontSize="18"/>

                    <Button Grid.Row="0" 
                            Grid.Column="1" 
                            Foreground="{DynamicResource MaterialDesignPaper}"
                            Margin="0, 0, 15, 0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" 
                                   Source="../../../Icons/Library/pc.png"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Grid.Column="1" 
                                       Text="Watch Locally"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Padding="10, 0, 6, 0"/>
                        </Grid>
                        <Button.Background>
                            <LinearGradientBrush EndPoint="1,1"
                                                 StartPoint="0,0">
                                <GradientStop Color="#FF58C8DF" />
                                <GradientStop Color="#FF53A7DD"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button Grid.Row="1" 
                            Grid.Column="1"  
                            Margin="0, 8, 15, 0"
                            Foreground="{DynamicResource MaterialDesignPaper}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" 
                                   Source="../../../Icons/Library/global.png"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Grid.Column="1" 
                                       Text="Watch Online"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Padding="10, 0, 6, 0"/>
                        </Grid>
                        <Button.Background>
                            <LinearGradientBrush EndPoint="1,1"
                                                 StartPoint="0,0">
                                <GradientStop Color="#FF58C8DF" />
                                <GradientStop Color="#FF53A7DD"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Grid>
            </Border>
        </StackPanel>
        </StackPanel>
    </Grid>
</rxui:ReactiveUserControl>
