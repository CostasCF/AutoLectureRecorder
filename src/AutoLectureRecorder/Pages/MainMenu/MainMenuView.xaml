<rxui:ReactiveUserControl 
            x:Class="AutoLectureRecorder.Pages.MainMenu.MainMenuView"
            x:TypeArguments="mainMenu:MainMenuViewModel"
            xmlns:rxui="http://reactiveui.net"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:xf="clr-namespace:XamlFlair;assembly=XamlFlair.WPF"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            xmlns:mainMenu="clr-namespace:AutoLectureRecorder.Pages.MainMenu"
            xmlns:mainMenu1="clr-namespace:AutoLectureRecorder.Common.CustomControls.MainMenu"
            TextElement.Foreground="{DynamicResource MaterialDesignBody}"
            Background="{DynamicResource MaterialDesignPaper}"
            TextElement.FontWeight="Normal"
            TextElement.FontSize="14"
            FontFamily="{materialDesign:MaterialDesignFont}" 
            mc:Ignorable="d" 
            d:DesignWidth="1360"
            d:DesignHeight="768">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Left Side Menu -->
        <Grid Grid.Row="0"
              xf:Animations.Primary="{xf:Animate BasedOn={StaticResource FadeInAndSlideFromLeft}, Duration=400}"
              x:Name="MainMenuGrid"
              Width="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0">
                <Image Source="../../Resources/Icons/app_icon_filled256x256.png"
                       Width="80"
                       Height="80"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,35,0,0" 
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <!-- Dashboard -->
                <Grid Margin="0,35,0,0">
                    <Button x:Name="DashboardButton"
                            Height="55"
                            Background="{DynamicResource ButtonHoverBrush}"
                            BorderThickness="0"
                            Cursor="Arrow"
                            Padding="0,5"
                            Style="{DynamicResource MaterialDesignFlatButton}">

                        <Button.Content>
                            <mainMenu1:Dashboard x:Name="DashboardButtonContent"
                                                TextElement.FontSize="14"
                                                FillColor="{DynamicResource PrimaryBrush}" />
                        </Button.Content>
                    </Button>

                    <Grid x:Name="DashboardSelectedLineGrid"
                          HorizontalAlignment="Right"
                          Background="{DynamicResource PrimaryBrush}"
                          Width="3"
                          Height="55"/>
                </Grid>

                <!-- Schedule -->
                <Grid>
                    <Button x:Name="ScheduleButton"
                            Height="55"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Arrow"
                            Padding="0,5"
                            Style="{StaticResource MaterialDesignFlatButton}">

                        <Button.Content>
                            <mainMenu1:Schedule x:Name="ScheduleButtonContent"
                                               Margin="0,0,7,0"
                                               TextElement.FontSize="14"
                                               FillColor="{DynamicResource SecondaryTextBrush}" />
                        </Button.Content>
                    </Button>
                    <Grid x:Name="ScheduleSelectedLineGrid"
                          Visibility="Hidden"
                          HorizontalAlignment="Right"
                          Background="{DynamicResource PrimaryBrush}"
                          Width="3"
                          Height="55"/>
                </Grid>

                <!-- Upload -->
                <Grid>
                    <Button x:Name="UploadButton"
                            Height="55"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Arrow"
                            Padding="0,5"
                            Style="{StaticResource MaterialDesignFlatButton}">

                        <Button.Content>
                            <mainMenu1:Upload x:Name="UploadButtonContent"
                                             Margin="0,0,26,0"
                                             TextElement.FontSize="14"
                                             FillColor="{DynamicResource SecondaryTextBrush}" />
                        </Button.Content>
                    </Button>

                    <Grid x:Name="UploadSelectedLineGrid"
                          Visibility="Hidden"
                          HorizontalAlignment="Right"
                          Background="{DynamicResource PrimaryBrush}"
                          Width="3"
                          Height="55" />
                </Grid>

                <!-- Library -->
                <Grid>
                    <Button x:Name="LibraryButton"
                            Height="55"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Arrow"
                            Padding="0,5"
                            Style="{StaticResource MaterialDesignFlatButton}">

                        <Button.Content>
                            <mainMenu1:Library x:Name="LibraryButtonContent"
                                              Margin="0,0,24,0"
                                              TextElement.FontSize="14"
                                              FillColor="{DynamicResource SecondaryTextBrush}" />
                        </Button.Content>
                    </Button>
                    
                    <Grid x:Name="LibrarySelectedLineGrid"
                          Visibility="Hidden"
                          HorizontalAlignment="Right"
                          Background="{DynamicResource PrimaryBrush}"
                          Width="3"
                          Height="55" />
                </Grid>

                <!-- Settings -->
                <Grid>
                    <Button x:Name="SettingsButton"
                            Height="55"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Arrow"
                            Padding="0,5"
                            Style="{StaticResource MaterialDesignFlatButton}">

                        <Button.Content>
                            <mainMenu1:Settings x:Name="SettingsButtonContent"
                                               Margin="0,0,15,0"
                                               TextElement.FontSize="14"
                                               FillColor="{DynamicResource SecondaryTextBrush}" />
                        </Button.Content>
                    </Button>

                    <Grid x:Name="SettingsSelectedLineGrid"
                          Visibility="Hidden"
                          HorizontalAlignment="Right"
                          Background="{DynamicResource PrimaryBrush}"
                          Width="3"
                          Height="55" />
                </Grid>
            </StackPanel>

            <!-- Left Side Down Buttons -->
            <StackPanel Grid.Row="0" Grid.Column="0"
                        VerticalAlignment="Bottom">

                <!-- Help -->
                <Button x:Name="HelpButton"
                        Height="55"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Padding="0,5"
                        Style="{StaticResource MaterialDesignFlatButton}">

                    <Button.Content>
                        <mainMenu1:Help x:Name="HelpButtonContent"
                                       Margin="0,0,32,0"
                                       TextElement.FontSize="14"
                                       FillColor="{DynamicResource SecondaryTextBrush}" />
                    </Button.Content>
                </Button>

                <!-- Logout -->
                <Button x:Name="LogoutButton"
                        Height="55"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Padding="0,5"
                        Style="{StaticResource MaterialDesignFlatButton}">

                    <Button.Content>
                        <mainMenu1:Logout x:Name="LogoutButtonContent"
                                         Margin="0,0,15,0"
                                         TextElement.FontSize="14"
                                         FillColor="{DynamicResource ErrorDarkerBrush}" />
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Vertical Line -->
        <Grid Grid.Column="0"
              Width="0.5"
              HorizontalAlignment="Right"
              Background="{DynamicResource SectionLineBrush}"
              Panel.ZIndex="-1">
        </Grid>

        <!-- Routed View Host -->
        <rxui:RoutedViewHost Grid.Column="1"
                             Duration="0"
                             x:Name="RoutedViewHost"
                             HorizontalContentAlignment="Stretch"
                             VerticalContentAlignment="Stretch" />

    </Grid>
</rxui:ReactiveUserControl>
